<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#3ba5d6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="22dp"

        android:textColor="#6708a8"
        android:textStyle="bold"
        android:text="How many minutes " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"

        android:background="#bb86fc"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"        android:text="Have you lived" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Click chọn ngày cụ sinh" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:textColor="#6708a8"
        android:textStyle="bold"
        android:text="23/3/2024" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:textColor="#6708a8"
        android:textStyle="bold"
        android:text="Cụ đã sống trên đời này" />

    <TextView
        android:id="@+id/txtAgeInMinute"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:textColor="#f60505"
        android:background="#ffc107"
        android:textStyle="bold"
        android:text="100032" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#6708a8"
        android:text="phút" />
</LinearLayout>